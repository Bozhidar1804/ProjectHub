@using static ProjectHub.Web.Extensions.EnumExtensions;
@model IEnumerable<ProjectIndexViewModel>

@{
    ViewData["Title"] = "Projects";
}

<h1>All Projects</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            int count = 1;
            foreach (var project in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@project.Name</td>
                    <td>@project.Description</td>
                    <td>@project.StartDate</td>
                    <td>@project.EndDate</td>
                    <td>@project.Status.GetDisplayName()</td>
                    <td>
                        <a href="@Url.Action("Details", "Project", new { id = project.Id })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Edit", "Project", new { id = project.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "Project", new { id = project.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                count++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No projects found.</td>
            </tr>
        }
    </tbody>
</table>


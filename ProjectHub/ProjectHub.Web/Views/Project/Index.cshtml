@using static ProjectHub.Web.Helpers.EnumExtensions;
@model IEnumerable<ProjectIndexViewModel>

@{
    ViewData["Title"] = "Projects";
    string currentUserId = this.User.GetUserId()!;
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Projects</h1>
    <div class="row">
        @foreach (var project in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@project.Name</h5>
                        <p class="card-text text-muted">
                            <strong>Description:</strong> @project.Description
                        </p>
                        <p>
                            <strong>Status:</strong> @project.Status.GetDisplayName()
                        </p>
                        <p>
                            <strong>End Date:</strong> @project.EndDate
                        </p>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-controller="Project" asp-route-id="@project.Id" class="btn btn-primary btn-sm">
                                View Details
                            </a>
                            @if (project.CreatorId != currentUserId.ToUpper())
                            {
                                <a asp-action="Create" asp-controller="Candidature" asp-route-projectId="@project.Id" class="btn btn-success btn-sm">
                                    Apply
                                </a>
                            }
                            else
                            {
                                <span class="text-muted small">You created this project</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@model ProjectDetailsViewModel

<div class="container mt-5">
    <!-- Project Header -->
    <div class="text-center mb-5">
        <h2 class="display-4 text-primary">@Model.Name - Details</h2>
        <p class="lead text-muted">@Model.Description</p>
    </div>

    <!-- Project Info Section -->
    <section class="mb-5">
        <h4 class="text-info mb-4">Project Information</h4>
        <ul class="list-group">
            <li class="list-group-item">Status: @Model.Status</li>
            <li class="list-group-item">Creator: @Model.CreatorName</li>
            <li class="list-group-item">Team Members: @Model.TeamMemberCount</li>
            <li class="list-group-item">Total Milestones: @Model.MaxMilestones</li>
        </ul>
    </section>

    @if (Model.Members.Any())
    {
        <!-- Members Section -->
        <section>
            <h4 class="text-info mb-4">Project Members</h4>
            <ul class="list-group">
                @foreach (var member in Model.Members)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><strong>@member.UserName</strong></span>
                        <span class="badge bg-info">@member.Role</span>
                        <span class="badge bg-success">@member.CompletedTasks Tasks Completed</span>
                    </li>
                }
            </ul>
        </section>
    }

    @if (Model.Milestones.Any())
    {
        <!-- Milestones Section -->
        <section>
            <h4 class="text-info mb-4">Project Milestones</h4>
            <ul class="list-group">
                @foreach (var milestone in Model.Milestones)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><strong>@milestone.Name</strong></span>
                        <span class="badge bg-primary">Progress: @milestone.Progress%</span>
                        <span class="badge bg-info">Deadline: @milestone.Deadline</span>
                    </li>
                }
            </ul>
        </section>
    }

    @if (Model.Tasks.Any())
    {
        <!-- Tasks Section -->
        <section>
            <h4 class="text-info mb-4">Assigned Tasks</h4>
            <ul class="list-group">
                @foreach (var task in Model.Tasks)
                {
                    <li class="list-group-item">
                        <span><strong>@task.Title</strong></span>
                        <span class="badge bg-primary">@task.MilestoneName</span>
                        <span class="badge bg-secondary">@task.Priority</span>
                        <span class="badge bg-success">@task.AssignedTo</span>
                        <span class="badge @(task.IsCompleted ? "bg-success" : "bg-danger")">
                            @task.IsCompleted ? "Completed" : "Pending"
                        </span>
                    </li>
                }
            </ul>
        </section>
    }
</div>

@model ProjectDeleteViewModel

<div class="container mt-5">
    <h2 class="text-danger">Confirm Deletion</h2>
    <p>Are you sure you want to delete the following project?</p>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Status:</strong> @Model.Status</p>
            <p><strong>End Date:</strong> @Model.EndDate</p>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="MyProjects" class="btn btn-secondary">Cancel</a>
    </form>
</div>

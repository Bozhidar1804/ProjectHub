@using ProjectHub.Data.Models.Enums;
@model IEnumerable<CandidatureIndexViewModel>

@{
    ViewData["Title"] = "My Candidatures";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">My Candidatures</h2>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var candidature in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@candidature.ProjectName</h5>
                            <p class="card-text text-muted">
                                <strong>Status:</strong>
                                <span class="badge
                                    @(candidature.Status == CandidatureStatus.Pending ? "bg-warning" :
                                      candidature.Status == CandidatureStatus.Approved ? "bg-success" :
                                      "bg-danger")">
                                    @(candidature.Status == CandidatureStatus.Pending ? "Pending" :
                                      candidature.Status == CandidatureStatus.Approved ? "Approved" :
                                     "Denied")
                                </span>
                            </p>
                            <p>
                                <strong>Application Date:</strong> @candidature.DateApplied
                            </p>
                            <p>
                                <strong>Content size:</strong>
                                @candidature.AnswersWordCount words
                            </p>

                            <!-- Add actions like "View Details" -->
                            <a asp-action="Details" asp-controller="Candidature" asp-route-id="@candidature.CandidatureId" class="btn btn-info btn-sm">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            You haven't applied to any projects yet.
        </div>
    }
</div>

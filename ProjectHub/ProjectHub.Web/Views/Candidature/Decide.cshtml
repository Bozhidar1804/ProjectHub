@model CandidatureDecideViewModel

<div class="container mt-5">
    <div class="card shadow-lg border-light">
        <div class="card-header bg-primary text-white rounded-top">
            <h3 class="mb-0">Candidature Decision</h3>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <h4 class="fw-bold">Applicant Name:</h4>
            <p class="fs-5 text-dark">@Model.ApplicantName</p>

            <h4 class="fw-bold mt-3">Project Name:</h4>
            <p class="fs-5 text-dark">@Model.ProjectName</p>

            <h4 class="fw-bold mt-3">Application Date:</h4>
            <p class="fs-5 text-muted">@Model.ApplicationDate</p>

            <h4 class="fw-bold mt-4">Content:</h4>
            <div class="border rounded-3 p-4 mb-4 bg-white shadow-sm">
                @foreach (var item in Model.Content)
                {
                    <div class="mb-4">
                        <h5 class="fw-bold text-primary">@item.Question</h5>
                        <p class="fs-6 text-dark">@item.Answer</p>
                    </div>
                }
            </div>

            <div class="d-flex justify-content-end gap-3">
                <form asp-action="Approve" asp-controller="Candidature" asp-route-candidatureId="@Model.CandidatureId" method="post">
                    <button type="submit" class="btn btn-success btn-lg d-flex align-items-center gap-2">
                        <i class="bi bi-check-circle"></i> Approve
                    </button>
                </form>
                <form asp-action="Deny" asp-controller="Candidature" asp-route-candidatureId="@Model.CandidatureId" method="post">
                    <button type="submit" class="btn btn-danger btn-lg d-flex align-items-center gap-2">
                        <i class="bi bi-x-circle"></i> Deny
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

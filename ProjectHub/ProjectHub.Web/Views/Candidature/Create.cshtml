@model CandidatureCreateInputModel

@{
    ViewData["Title"] = "Create Candidature";
}

<h3>Create Candidature</h3>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Answer1">1. What interests you about this project?</label>
        <textarea class="form-control" id="Answer1" name="Answer1" required></textarea>
    </div>

    <div class="form-group">
        <label for="Answer2">2. What skills can you contribute?</label>
        <textarea class="form-control" id="Answer2" name="Answer2" required></textarea>
    </div>

    <div class="form-group">
        <label for="Answer3">3. Why should we choose you?</label>
        <textarea class="form-control" id="Answer3" name="Answer3" required></textarea>
    </div>

    <div class="form-group">
        <label for="Answer4">4. What are your goals for joining this project?</label>
        <textarea class="form-control" id="Answer4" name="Answer4" required></textarea>
    </div>

    <input type="hidden" name="ProjectId" value="@Model.ProjectId" />

    <button type="submit" class="btn btn-primary">Submit Candidature</button>
</form>

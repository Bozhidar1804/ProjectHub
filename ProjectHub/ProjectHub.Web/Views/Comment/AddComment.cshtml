@model AddCommentFormModel

<div class="card shadow-lg mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-chat-dots"></i> Add Comment to Task: @Model.TaskTitle</h5>
    </div>

    <div class="card-body">
        <form asp-action="AddComment" asp-controller="Comment" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="TaskId" />
            <input type="hidden" asp-for="TaskTitle" />

            <div class="mb-3">
                <label asp-for="Content" class="form-label fs-5 text-secondary">Comment</label>
                <textarea asp-for="Content" class="form-control shadow-sm border-2" rows="5" placeholder="Type your comment here..." required></textarea>
                <div class="invalid-feedback">
                    Please provide a comment.
                </div>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success btn-lg px-4 py-2">Submit <i class="bi bi-send"></i></button>
            </div>
        </form>
    </div>
</div>

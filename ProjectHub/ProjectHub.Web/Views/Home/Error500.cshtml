<!-- Displayed for internal server errors, when an unexpected issue occurs in the application backend. -->

@{
    ViewData["Title"] = "Server Error";
}
<div class="container text-center my-5">
    <h1 class="display-1 text-danger">500</h1>
    <h2 class="text-muted">Internal Server Error</h2>
    <p class="lead">Something went wrong on our end. We're working to fix it as quickly as possible.</p>
    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
            <i class="bi bi-house-door-fill"></i> Back to Home
        </a>
    </div>
    <img src="/img/error-500.png" alt="500 Error" class="img-fluid mt-4" style="max-width: 500px;">
</div>

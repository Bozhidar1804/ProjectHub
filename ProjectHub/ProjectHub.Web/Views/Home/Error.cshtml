<!-- Displayed when an unspecified error occurs and doesn’t fit predefined cases. -->
@{
    ViewData["Title"] = "An Error Occurred";
}
<div class="container text-center my-5">
    <h1 class="display-1 text-danger">Error</h1>
    <h2 class="text-muted">Oops! Something Went Wrong</h2>
    <p class="lead">We're experiencing some technical difficulties. Please try again later.</p>
    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
            <i class="bi bi-house-door-fill"></i> Back to Home
        </a>
    </div>
</div>


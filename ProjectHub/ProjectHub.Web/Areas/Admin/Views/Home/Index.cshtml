@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h1 class="text-center text-primary mb-4">Welcome, Administrator</h1>
    <p class="text-center text-muted">Manage and monitor the platform efficiently.</p>

    <div class="row text-center">
        <!-- User Management -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">User Role Management</h5>
                    <p class="card-text text-muted">Assign and manage user roles, such as ProjectCreator.</p>
                    <a asp-area="Admin" asp-controller="Management" asp-action="UserRoles" class="btn btn-outline-primary">Manage Roles</a>
                </div>
            </div>
        </div>

        <!-- Project Management -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Projects Management</h5>
                    <p class="card-text text-muted">Oversee all projects and perform administrative actions.</p>
                    <a asp-area="Admin" asp-controller="Management" asp-action="Projects" class="btn btn-outline-primary">Manage Projects</a>
                </div>
            </div>
        </div>

        <!-- Candidature Management -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Candidature Oversight</h5>
                    <p class="card-text text-muted">Review and monitor all submitted candidatures.</p>
                    <a asp-area="Admin" asp-controller="Management" asp-action="Candidatures" class="btn btn-outline-primary">View Candidatures</a>
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Statistics</h5>
                    <p class="card-text text-muted">Access various statistics about the project.</p>
                    <a asp-area="Admin" asp-controller="Management" asp-action="Statistics" class="btn btn-outline-primary">Analyze Statistics</a>
                </div>
            </div>
        </div>
    </div>
</div>
